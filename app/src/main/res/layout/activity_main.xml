<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.userslist.UsersListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/users_list_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/users_list_recyclerView"
        app:layout_constraintStart_toStartOf="@+id/users_list_recyclerView"
        app:layout_constraintTop_toTopOf="@+id/users_list_recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>